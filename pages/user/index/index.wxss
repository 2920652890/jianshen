page {
  background-color: #f5f5f5;
}
.user-page .header {
  position: relative;
}
.user-page .header2 {
  position: absolute;
  left: 28rpx;
  right: 28rpx;
  bottom: 0;
  top: 10rpx;
}
.user-page .header2 .nav {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  padding: 38rpx 44rpx;
}
.user-page .header2 .nav .head {
  position: absolute;
  right: 56rpx;
  top: 30rpx;
  width: 92rpx;
  height: 92rpx;
  border: 2px solid #fff;
  border-radius: 50%;
}
.user-page .header2 .nav .h1 {
  font-size: 40rpx;
}
.user-page .header2 .nav .h2 {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.user-page .header2 .nav .h2 .span {
  color: #666;
}
.user-page .header2 .menu {
  position: absolute;
  left: 0;
  width: 100%;
  display: flex;
  bottom: 20rpx;
  padding: 0 60rpx;
}
.user-page .header2 .menu .item {
  flex: 1;
  overflow: hidden;
  text-align: center;
}
.user-page .header2 .menu .item .h3 {
  color: #4b7abb;
  font-size: 54rpx;
  height: 76rpx;
}
.user-page .header2 .menu .item .h4 {
  font-size: 20rpx;
  color: #666666;
}
.user-page .list {
  background-color: #fff;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #666;
}
.user-page .list .item {
  height: 120rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
}
.user-page .list .item:last-child {
  border-bottom: 0;
}
.user-page .list .item .img {
  width: 40rpx;
  margin-right: 20rpx;
}
.user-page .list .item .img image {
  width: 36rpx;
}
.user-page .list .item .right {
  margin-left: 20rpx;
  font-size: 40rpx;
}
.item .f1 {
  font-size: 30rpx;
}
