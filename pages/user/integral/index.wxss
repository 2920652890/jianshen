.integral-page {
  padding: 0 30rpx;
}
.integral-page .item {
  height: 150rpx;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
}
.integral-page .item image {
  border-radius: 50%;
  width: 72rpx;
  height: 72rpx;
  margin-right: 26rpx;
}
.integral-page .item .f1 .h1 {
  font-size: 30rpx;
}
.integral-page .item .f1 .h2 {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}
.integral-page .item .num {
  margin-left: 20rpx;
  font-size: 48rpx;
}
.integral-page .tip {
  margin: 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #b0b0b0;
}
.integral-page .tip image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 10rpx;
}

.toast-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.toast-content {
  background-color: #fff;
  border-radius: 5px;
  padding: 40rpx;
  width: 600rpx;
}
.mt-5 {
  margin-top: 10rpx;
}
