page {
  background-color: #f5f5f5;
}
.ur-page {
  padding: 0 20rpx;
}
.ur-page .item {
  height: 152rpx;
  background: #fff;
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.05);
  border-radius: 6px;
  position: relative;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  overflow: hidden;
  margin: 28rpx 0;
}

.ur-page .item image {
  border-radius: 50%;
  width: 96rpx;
  height: 96rpx;
  margin-right: 40rpx;
}
.ur-page .item .tip {
  position: absolute;
  width: 140rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background-color: #d71f1a;
  top: 23rpx;
  right: -31rpx;
  transform: rotate(45deg);
}
.ur-page .item .f1 .h1 {
  font-size: 28rpx;
}
.ur-page .item .f1 .h2 {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}
.ur-page .item .f1 .h3 {
  margin-top: 2rpx;
  font-size: 20rpx;
  color: #999;
}
.ur-page .bmp {
  margin: 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #b0b0b0;
}
.ur-page .bmp image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 10rpx;
}
