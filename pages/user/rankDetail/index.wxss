page {
  background-color: #f5f5f5;
}
.detail-page .header {
  position: relative;
}
.detail-page .section {
  position: absolute;
  background-color: #fff;
  box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.12);
  border-radius: 6px;
  left: 36rpx;
  right: 36rpx;
  top: 40rpx;
  height: 366rpx;
  padding-top: 22rpx;
}
.detail-page .section .head {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  border-radius: 50%;
}
.detail-page .section .nm {
  font-size: 40rpx;
  text-align: center;
  margin-top: 24rpx;
}
.detail-page .section .menu {
  margin-top: 48rpx;
  display: flex;
}
.detail-page .section .menu .item {
  flex: 1;
  overflow: hidden;
  text-align: center;
}
.detail-page .section .menu .item:last-child > p::after {
  width: 0;
}
.detail-page .section .menu .item .p {
  color: #999;
  font-size: 24rpx;
  position: relative;
  height: 36rpx;
  line-height: 36rpx;
}
.detail-page .section .menu .item .p::after {
  content: "";
  position: absolute;
  width: 1px;
  height: 100%;
  background: #eeeeee;
  top: 0;
  right: 0;
}
.detail-page .section .menu .item .h2 {
  font-size: 40rpx;
}
.detail-page .msg {
  background: #ffffff;
  border-radius: 6px;
  margin: 130rpx 24rpx 40rpx 24rpx;
  padding:  0;
  font-size: 24rpx;
  color: #666;
}
.detail-page .msg .h1 {
  font-size: 32rpx;
  color: #000;
  margin-bottom: 28rpx;
}
.footer {
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
}
.table {
  border: 1px solid rgba(230, 229, 229, 1);
  color: #666666;
  font-size: 10px;
  margin-top: 20rpx;
}
.table .col {
  display: flex;
  border-top: 1px solid rgba(230, 229, 229, 1);
}
.table .col:first-child {
  border-top: none;
}
.table .col .f1 {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
  padding: 10rpx;
  border-right: 1px solid rgba(230, 229, 229, 1);
}
.table .col .f5 {
  flex: 5;
  overflow: hidden;
}
.table .list {
  display: flex;
  width: 100%;
  border-top: 1px solid rgba(230, 229, 229, 1);
}
.table .list:first-child {
  border-top: none;
}
.table .list .item {
  flex: 1;
  overflow: hidden;
  padding: 10rpx;
  border-right: 1px solid rgba(230, 229, 229, 1);
}
.table .list .item:last-child {
  border-right: 0;
}
.red {
  color: rgb(235, 68, 56);
}
