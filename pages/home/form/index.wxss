.maintenance-page .list {
  margin: 0 30rpx;
  padding: 20rpx 0;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 1px solid #fbf9fb;
}
.maintenance-page .list .item {
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 6px;
  overflow: hidden;
  border: 1px solid #979797;
}
.maintenance-page .list .item .close {
  position: absolute;
  right: 6rpx;
  top: 6rpx;
  font-size: 36rpx;
}
.maintenance-page .list .add::before {
  content: '';
  width: 38rpx;
  height: 4rpx;
  background: #d8d8d8;
  border-radius: 1px;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.maintenance-page .list .add::after {
  content: '';
  width: 4rpx;
  height: 38rpx;
  background: #d8d8d8;
  border-radius: 1px;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.maintenance-page .msg {
  margin: 24rpx 30rpx 60rpx 30rpx;
  border-bottom: 1px solid #fbf9fb;
}
.maintenance-page .msg textarea {
  width: 100%;
  height: 254rpx;
}
.maintenance-page .address {
  font-size: 24rpx;
  color: #999999;
  padding: 0 30rpx;
  text-align: right;
}
.maintenance-page .address image {
  width: 20rpx;
  height: 24rpx;
  margin-right: 12rpx;
}
.maintenance-page .address image,
.maintenance-page .address view {
  display: inline-block;
  vertical-align: middle;
}
.maintenance-page .submit {
  margin: 100rpx 20rpx 0 20rpx;
  border-radius: 6px;
  height: 100rpx;
  line-height: 100rpx;
  background: #0345a1;
  text-align: center;
  color: #fff;
  font-size: 38rpx;
}
