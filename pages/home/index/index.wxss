.home-page {
  width: 100%;
  height: 100%;
}
swiper {
  height: 132px;
}
.home-page .getLocation_btn {
  margin: 40rpx auto 0 auto;
  width: 400rpx;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 5px;
  line-height: 80rpx;
  background-color: #fff;
}
.home-page .banner {
  background-color: #fff;
  padding: 1px 0 16rpx 0;
  margin-bottom: 24rpx;
}
.home-page .banner .shadow {
  margin: 30rpx 30rpx 40rpx 30rpx;
  border-radius: 10px;
  overflow: hidden;
}
.home-page .banner .menu {
  padding-bottom: 40rpx;
  display: flex;
}
.home-page .banner .menu .menu-item {
  flex: 1;
  text-align: center;
}
.home-page .banner .menu .menu-item image {
  width: 78rpx;
  height: 86rpx;
  margin: 0 auto 8rpx auto;
}
.home-page .store {
  background-color: #fff;
  padding: 0 30rpx;
}
.home-page .store .title {
  padding: 32rpx 0;
  display: flex;
  align-items: center;
}
.home-page .store .title view {
  font-size: 36rpx;
}
.home-page .store .title .span {
  font-size: 24rpx;
  color: #999999;
}
.home-page .store .list {
  padding-bottom: 1px;
}
.home-page .store .list .item {
  margin-bottom: 28rpx;
  display: flex;
  height: 240rpx;
  overflow: hidden;
}
.home-page .store .list .item .img {
  width: 320rpx;
  min-height: 240rpx;
  position: relative;
  margin-right: 22rpx;
  border-radius: 8px;
}
.home-page .store .list .item .img .num {
  position: absolute;
  width: 100%;
  background: linear-gradient(
    180deg,
    rgba(7, 123, 207, 0) 0%,
    rgba(3, 69, 161, 0.62) 100%
  );
  left: 0;
  bottom: 0;
  z-index: 1;
  color: #fff;
  font-size: 20rpx;
  padding: 12rpx 16rpx;
}
.home-page .store .list .item > .f1 {
  padding-top: 16rpx;
}
.home-page .store .list .item > .f1 .h1 {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}
.home-page .store .list .item > .f1 .h2 {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}
.home-page .store .list .item > .f1 .h2 .address {
  width: 20rpx;
  height: 24rpx;
  margin-top: 7rpx;
  margin-right: 12rpx;
}
.home-page .store .list .item > .f1 .h2 .f1 {
  color: #999999;
  font-size: 24rpx;
}
.home-page .store .list .item > .f1 .h3 {
  color: #666666;
  font-size: 24rpx;
}
.home-page .store .list .item > .f1 .h3 .s2 {
  margin-left: 10rpx;
}
.home-page .store .list .item > .f1 .user-box {
  margin-top: 10rpx;
  color: #666666;
}

.mask {
  display: flex;
  align-items: center;
  justify-content: center;
}
.mask-box {
  padding: 40rpx 60rpx;
  width: 652rpx;
  background-color: #fff;
  border-radius: 5px;
}
.mask-box > image {
  width: 114rpx;
  height: 160rpx;
  display: block;
  margin: 0 auto;
}
.mask-box > .h1 {
  color: #666;
}

.mask-box > .h2 {
  font-size: 34rpx;
  margin: 22rpx 0 18rpx;
  text-align: center;
}
.close {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 4px;
  background: rgba(216, 216, 216, 1);
  color: #fff;
  text-align: center;
  font-size: 34rpx;
  margin-top: 36rpx;
}
.close.active {
  background: #17489b;
}
