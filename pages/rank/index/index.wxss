.rank-page {
  padding-top: 96rpx;
}
.rank-page .header {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
}
.rank-page .header .menu {
  height: 96rpx;
  display: flex;
  color: #fff;
  background-color: #0245a0;
}
.rank-page .header .menu .item {
  flex: 1;
  position: relative;
  text-align: center;
  line-height: 96rpx;
  font-size: 30rpx;
  color: #96b7e3;
}
.rank-page .header .menu .active {
  color: #fff;
}
.rank-page .header .menu .active::before {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #fff;
}
.rank-page .tpbox {
  height: 164rpx;
  box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.06);
  padding-top: 10rpx;
  background-color: #fff;
}
.rank-page .tpbox .title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.rank-page .tpbox .title .t1 {
  position: relative;
}
.rank-page .tpbox .title .wenh {
  width: 26rpx;
  height: 26rpx;
  margin-left: 12rpx;
}
.rank-page .tpbox .title .tips {
  position: absolute;
  left: 140rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 200rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.rank-page .tpbox .title .tips image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 12rpx;
}
.rank-page .tpbox .total {
  margin-top: 18rpx;
  display: flex;
}
.rank-page .tpbox .total .item {
  flex: 1;
  overflow: hidden;
  text-align: center;
}
.rank-page .tpbox .total .item:last-child > .p::before {
  width: 0;
}
.rank-page .tpbox .total .item .p {
  font-size: 24rpx;
  position: relative;
  height: 36rpx;
  line-height: 36rpx;
  color: #999;
}
.rank-page .tpbox .total .item .p::before {
  content: "";
  width: 1px;
  height: 36rpx;
  position: absolute;
  top: 0;
  right: 0;
  background-color: #eeeeee;
}
.rank-page .tpbox .total .item .h2 {
  font-size: 32rpx;
}
.rank-page .list .item {
  height: 164rpx;
  display: flex;
  align-items: center;
  padding: 0 28rpx;
}
.rank-page .list .item .num {
  width: 52rpx;
  height: 48rpx;
  line-height: 24rpx;
  text-align: center;
  margin-right: 14rpx;
  font-size: 28rpx;
}
.rank-page .list .item .head {
  width: 110rpx;
  height: 110rpx;
  border: 2px solid transparent;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.rank-page .list .item .f1 .h1 {
  font-size: 28rpx;
}
.rank-page .list .item .f1 .h2 {
  color: #666666;
  font-size: 40rpx;
}
.rank-page .list .item .f1 .h2 .span {
  font-size: 26rpx;
  color: #666666;
}
.rank-page .list .item .f1 .h3 {
  font-size: 24rpx;
  color: #999;
}
.rank-page .list .item .right {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #999;
}
.rank-page .list .item:first-child .head {
  border-color: #f0c662;
}
.rank-page .list .item:first-child .f1 > .h2 {
  color: #23c789;
}
.rank-page .list > .item.active {
  background-color: #fafafa;
  box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, 0.1);
}
